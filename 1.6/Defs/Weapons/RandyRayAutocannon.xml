<Defs>

	<ThingDef Name="BS_RandyDoubleRayTurret" ParentName="BuildingBase">
    <defName>BS_RandyDoubleRayTurret</defName>
    <label>randy's double ray gun turret</label>
    <description>"The bizarre turret is resistant to universal entropy - leading me to believe that these 'Randy Rays' may in fact have been a side effect of trying to make armour.\n\nResistant to universal entropy can certainly not be used to describe whatever thing thing hits."\n- unknown engineer's research notes.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/BS_RandyDoubleBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/BS_RandyDoubleRay_Icon</uiIconPath>
    <uiIconScale>0.95</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
		<size>(2,2)</size>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>700</MaxHitPoints>
      <Flammability>0.3</Flammability>
      <WorkToBuild>25000</WorkToBuild>
      <Mass>120</Mass>
      <Beauty>1</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shots until barrel change</fuelLabel>
        <fuelGizmoLabel>Barrel durability</fuelGizmoLabel>
        <outOfFuelMessage>Needs new barrel</outOfFuelMessage>
        <fuelFilter><thingDefs><li>Steel</li></thingDefs></fuelFilter>
        <fuelCapacity>200</fuelCapacity> 
        <fuelMultiplier>0.25</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.5</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>450</Steel>
			<Plasteel>80</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Neutroamine>5</Neutroamine>
    </costList>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
    <building Inherit="False">
      <combatPower>75</combatPower>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>BS_RandyDoubleRayTurret_Top</turretGunDef>
			<turretBurstCooldownTime>2.5</turretBurstCooldownTime>
      <turretTopDrawSize>2.7</turretTopDrawSize>
      <turretTopOffset>(0, 0.05)</turretTopOffset>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>GunTurrets</li>
      <li>BS_MadScienceField</li>
    </researchPrerequisites>
  </ThingDef>

	<ThingDef Name="BS_RandyRaygunTurret" ParentName="BaseWeaponTurret">
    <defName>BS_RandyDoubleRayTurret_Top</defName>
    <label>randy's double ray gun turret top</label>
    <description>A heavy randy ray cannon.</description>
    <graphicData>
      <texPath>Things/BS_RandyDoubleRay</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <statBases Inherit="False">
      <AccuracyTouch>0.35</AccuracyTouch>
      <AccuracyShort>0.36</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>8</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>50</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs Inherit="False">
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BS_RandyRayBigShot</defaultProjectile>
        
        <warmupTime>5</warmupTime>
        <range>40.9</range>
        <minRange>4.9</minRange>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>6</burstShotCount>
        <soundCast>Resurrect_Resolve</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="BS_RandyRayShot">
		<defName>BS_RandyRayBigShot</defName>
		<label>Randy ray ray</label>
		<graphicData>
			<texPath>Things/BS_RandyRayProjectile_1</texPath>
			<drawSize>1.45</drawSize>
		</graphicData>
		<projectile>
			<damageAmountBase>60</damageAmountBase>
			<stoppingPower>0.7</stoppingPower>
		</projectile>
    <modExtensions>
			<li Class="BigAndSmall.ModExtension_StatusAfflicter">
        <hediffToAdd>BS_RandyRayAffliction</hediffToAdd>
        <severity>0.025</severity>
        <scaleSeverityByDamage>true</scaleSeverityByDamage>
        <softScaleSeverityByBodySize>true</softScaleSeverityByBodySize>
			</li>
		</modExtensions>
	</ThingDef>

  <ThingDef ParentName="BS_RandyRayShot">
		<defName>BS_RandyRayRocket</defName>
		<label>Randy raygun rocket</label>
		<graphicData>
			<texPath>Things/BS_RandyRay_AsProjectile</texPath>
			<drawSize>1.15</drawSize>
		</graphicData>
		<projectile>
			<damageAmountBase>101</damageAmountBase>
      <speed>31</speed>
      <explosionRadius>4.9</explosionRadius>
      <explosionDamageFalloff>true</explosionDamageFalloff>
      <soundExplode>Explosion_EMP</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
			<stoppingPower>0.7</stoppingPower>
		</projectile>
    <modExtensions>
			<li Class="BigAndSmall.ModExtension_StatusAfflicter">
        <hediffToAdd>BS_RandyRayAffliction</hediffToAdd>
        <severity>0.025</severity>
        <scaleSeverityByDamage>true</scaleSeverityByDamage>
        <softScaleSeverityByBodySize>true</softScaleSeverityByBodySize>
			</li>
		</modExtensions>
	</ThingDef>

  <ThingDef ParentName="BS_RandyRayShot">
		<defName>BS_RandyRayRocket_MKII</defName>
		<label>Randy raygun rocket</label>
		<graphicData>
			<texPath>Things/BS_RandyRayMK2_AsProjectile</texPath>
			<drawSize>1.0</drawSize>
		</graphicData>
		<projectile>
			<damageAmountBase>200</damageAmountBase>
      <speed>31</speed>
      <explosionRadius>9.9</explosionRadius>
      <explosionDamageFalloff>true</explosionDamageFalloff>
      <soundExplode>Explosion_EMP</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
			<stoppingPower>0.7</stoppingPower>
		</projectile>
    <modExtensions>
			<li Class="BigAndSmall.ModExtension_StatusAfflicter">
        <hediffToAdd>BS_RandyRayAffliction</hediffToAdd>
        <severity>0.025</severity>
        <scaleSeverityByDamage>true</scaleSeverityByDamage>
        <softScaleSeverityByBodySize>true</softScaleSeverityByBodySize>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>